// banner 轮播样式，确保所有图片绝对定位重叠，只有当前显示
#index-banner-carousel {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  .banner-img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: opacity 0.6s;
    opacity: 0;
    pointer-events: none;
    display: block !important;
  }
  .banner-img.active {
    opacity: 1;
    pointer-events: auto;
  }
}

#page-header {
  overflow: hidden;
}
